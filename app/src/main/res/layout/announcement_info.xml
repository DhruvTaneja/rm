<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhruv.resumemanager.AnnouncementInfo">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/toolbar"
            android:textSize="30sp"
            android:gravity="center"
            android:id="@+id/announcement_title" />

        <TextView
            android:layout_below="@id/announcement_title"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:id="@+id/announcement_time" />

        <TextView
            android:layout_toStartOf="@id/announcement_time"
            android:layout_toLeftOf="@id/announcement_time"
            android:layout_below="@id/announcement_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="italic"
            android:layout_margin="10dp"
            android:id="@+id/announcement_date" />

        <TextView
            android:layout_below="@id/announcement_date"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_margin="10dp"
            android:id="@+id/announcement_message" />

    </RelativeLayout>
</ScrollView>
