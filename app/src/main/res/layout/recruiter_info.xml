<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.dhruv.resumemanager.RecruiterInfo" >

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_below="@id/toolbar"
        android:textSize="30sp"
        android:gravity="center"
        android:id="@+id/recruiter_name" />

    <TextView
        android:layout_below="@id/recruiter_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:layout_margin="10dp"
        android:id="@+id/recruiter_date" />

    <TextView
        android:id="@+id/recruiter_ctc"
        android:layout_below="@id/recruiter_date"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recruiter_category"
        android:layout_below="@id/recruiter_date"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/open_for"
        android:text="@string/open_for"
        android:layout_below="@id/recruiter_ctc"
        android:textSize="20sp"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/recruiter_branches"
        android:layout_below="@id/open_for"
        android:textSize="16sp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/courses"
        android:layout_below="@id/recruiter_branches"
        android:layout_margin="10dp"
        android:textSize="20sp"
        android:text="@string/eligible_courses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/first_two"
        android:layout_below="@id/courses"
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recruiter_be"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recruiter_me"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:layout_below="@id/first_two"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/recruiter_intern"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/recruiter_mba"
            android:layout_margin="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:textSize="24sp"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
